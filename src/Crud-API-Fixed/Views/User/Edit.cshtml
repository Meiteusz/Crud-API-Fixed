@model Crud_API_Fixed.Models.UserModel

@using (Html.BeginForm())
{
    <body>
        <div class="form-group">
            <div>
                @Html.LabelFor(x => x.Name)
                <div>@Html.TextBoxFor(x => x.Name)</div>
            </div>
            <div>
                @Html.LabelFor(x => x.Email)
                <div>@Html.TextBoxFor(x => x.Email)</div>
            </div>
            <div>
                @Html.LabelFor(x => x.Password)
                <div>@Html.TextBoxFor(x => x.Password)</div>
            </div>
            <div style="visibility: hidden;">@Html.TextBoxFor(x => x.Id)</div>
        </div>
        <div class="form-group">
            <input type="submit" value="Register" class="btn btn-primary" asp-action="EditUserConfirm" />
        </div>
    </body>
}